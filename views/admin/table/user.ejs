

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center  mb-4 border-bottom">
    <h1 class="h2">User</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb" style="background-color: white">
                <li class="breadcrumb-item"><a href="#">Data</a></li>
                <li class="breadcrumb-item active" aria-current="page">User</li>
            </ol>
        </nav>
    </div>
</div>






<div class="card">
    <div class="card-header d-flex justify-content-between   ">
        <nav aria-label="Page navigation example">
            <ul class="pagination m-0">
                <%if(page>=1){%><li class="page-item"><a class="page-link" href='?page=<%=page%>'>Previous</a></li><%}%>
                <%for(var i=0;i<=count/10;i++){%>
                <%if(i>page-4&&i<page+4){%>
                <li class="page-item <%if(page==i){%>active<%}%>"  ><a class="page-link" href='?page=<%=i+1%>'><%=i+1%></a></li>
                <%}%>
                <%}%>
                <%if(page<count/10-1){%>
                <li class="page-item"><a class="page-link" href="?page=<%=page+2%>">Next</a></li><%}%>
            </ul>
        </nav>
        <h3 class="m-0"> </h3>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-sm m-0">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>About</th>
                    <th>Gender</th>
                    <th>Language</th>
                    <th>Country</th>
                    <th>Birthday</th>
                    <th>Email</th>
                    <th>Facebook</th>
                    <th>Google</th>
                    <th>created At</th>
                    <th>Edit/Del</th>
                </tr>
                </thead>
                <tbody>
                <%results.forEach(function (item,i) {  %>

                <tr <%if(item.role){%>class="table-success"<%}%><%if(item.block){%>class="table-danger"<%}%>>
                    <td><%=i+1%></td>
                    <td><img src="<%=item.imgUrl%>" onclick="imgViewModal(this)" width="28" height="28"></td>
                    <td><%=item.name%></td>
                    <td><%=item.username%></td>
                    <td><%=item.about%></td>
                    <td><%=item.gender%></td>
                    <td><%=item.lang%></td>
                    <td><%=item.county%></td>
                    <td><%if(item.birthday!=undefined){%><%=item.birthday.toDateString()%><%}%></td>
                    <td><%=item.email%></td>
                    <td><%=item.facebook.id%></td>
                    <td><%=item.google.id%></td>
                    <td><%=item.createdAt.toDateString()%></td>
                    <td>
                        <div class="btn-group">
                            <a href="#" class="btn btn-sm btn-warning text-white" onclick="return confirm('Are you sure edit <%=item.username%> user?')"><i class="fa fa-edit"></i></a>
                            <a href="/admin/userBlock/<%=item._id%>" class="btn btn-sm btn-info text-white" onclick="return confirm('Are you sure ban <%=item.username%> user?')"><i class="fa fa-ban"></i></a>
                            <a href="/admin/userDel/<%=item._id%>" class="btn btn-sm btn-danger text-white" onclick="return confirm('Are you sure delete <%=item.username%> user?')"><i class="fa fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
                <%})%>
                </tbody>
            </table>
        </div>
    </div>
</div>